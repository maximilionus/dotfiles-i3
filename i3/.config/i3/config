# Variables
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term kitty
set $menu dmenu_run

set $exec_cwd $I3_SCRIPTS_DIR/exec-cwd.sh
set $power_menu $I3_SCRIPTS_DIR/power-menu.sh
set $workspacectl $I3_SCRIPTS_DIR/workspacectl.sh
set $idle $I3_SCRIPTS_DIR/idle.sh
set $screenlock $I3_SCRIPTS_DIR/screenlock.sh
set $screenshot $I3_SCRIPTS_DIR/screenshot.sh
set $statusbar $I3_SCRIPTS_DIR/statusbar.sh

# Global font settings
font pango:Inter 9

# Autostart
exec --no-startup-id mkdir -p $I3_RUNTIME_DIR
exec --no-startup-id picom
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id gnome-keyring-daemon --start
exec --no-startup-id dunst
exec --no-startup-id playerctld daemon

# Output configuration
exec --no-startup-id feh --no-fehbg --bg-fill ~/Pictures/wallpaper

# Idle configuration
exec --no-startup-id xset +dpms dpms 0 300 300
exec --no-startup-id xss-lock --transfer-sleep-lock -- $screenlock

# Input configuration
exec_always --no-startup-id "setxkbmap -layout us,ru"
exec_always --no-startup-id "setxkbmap -option grp:win_space_toggle"

# Key bindings
## Basics:

### Start a terminal
bindsym $mod+Return exec --no-startup-id $term

bindsym $mod+Shift+Return exec --no-startup-id $exec_cwd $term

bindsym $mod+Escape exec $screenlock

bindsym $mod+q kill
bindsym $mod+Shift+q exec sh -c 'kill -9 $(i3-msg -t get_tree | jq ".. | objects | select(.focused? == true).pid")'

bindsym $mod+Tab exec --no-startup-id $menu

floating_modifier $mod

bindsym $mod+Shift+c reload

bindsym $mod+Delete exec $power_menu

## Moving around:
bindcode $mod+43 focus left
bindcode $mod+44 focus down
bindcode $mod+45 focus up
bindcode $mod+46 focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindcode $mod+Shift+43 move left
bindcode $mod+Shift+44 move down
bindcode $mod+Shift+45 move up
bindcode $mod+Shift+46 move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindcode $mod+29 exec \
    "i3-msg resize grow left 10 px or 10 ppt || i3-msg resize shrink right 10 px or 10 ppt"
bindcode $mod+30 exec \
    "i3-msg resize grow down 10 px or 10 ppt || i3-msg resize shrink up 10 px or 10 ppt"
bindcode $mod+31 exec \
    "i3-msg resize grow up 10 px or 10 ppt || i3-msg resize shrink down 10 px or 10 ppt"
bindcode $mod+32 exec \
    "i3-msg resize grow right 10 px or 10 ppt || i3-msg resize shrink left 10 px or 10 ppt"

bindcode $mod+Shift+29 exec \
    "i3-msg resize grow left 2 px or 2 ppt || i3-msg resize shrink right 2 px or 2 ppt"
bindcode $mod+Shift+30 exec \
    "i3-msg resize grow down 2 px or 2 ppt || i3-msg resize shrink up 2 px or 2 ppt"
bindcode $mod+Shift+31 exec \
    "i3-msg resize grow up 2 px or 2 ppt || i3-msg resize shrink down 2 px or 2 ppt"
bindcode $mod+Shift+32 exec \
    "i3-msg resize grow right 2 px or 2 ppt || i3-msg resize shrink left 2 px or 2 ppt"

## Workspaces:
bindsym $mod+F1 exec $workspacectl set-layer 1
bindsym $mod+F2 exec $workspacectl set-layer 2
bindsym $mod+F3 exec $workspacectl set-layer 3
bindsym $mod+F4 exec $workspacectl set-layer 4
bindsym $mod+F5 exec $workspacectl set-layer 5
bindsym $mod+F6 exec $workspacectl set-layer 6
bindsym $mod+F7 exec $workspacectl set-layer 7
bindsym $mod+F8 exec $workspacectl set-layer 8
bindsym $mod+F9 exec $workspacectl set-layer 9
bindcode $mod+49 exec $workspacectl set-layer 0

bindsym $mod+1 exec $workspacectl set 1
bindsym $mod+2 exec $workspacectl set 2
bindsym $mod+3 exec $workspacectl set 3
bindsym $mod+4 exec $workspacectl set 4
bindsym $mod+5 exec $workspacectl set 5
bindsym $mod+6 exec $workspacectl set 6
bindsym $mod+7 exec $workspacectl set 7
bindsym $mod+8 exec $workspacectl set 8
bindsym $mod+9 exec $workspacectl set 9
bindsym $mod+0 exec $workspacectl set 10

bindsym $mod+Shift+1 exec $workspacectl move 1
bindsym $mod+Shift+2 exec $workspacectl move 2
bindsym $mod+Shift+3 exec $workspacectl move 3
bindsym $mod+Shift+4 exec $workspacectl move 4
bindsym $mod+Shift+5 exec $workspacectl move 5
bindsym $mod+Shift+6 exec $workspacectl move 6
bindsym $mod+Shift+7 exec $workspacectl move 7
bindsym $mod+Shift+8 exec $workspacectl move 8
bindsym $mod+Shift+9 exec $workspacectl move 9
bindsym $mod+Shift+0 exec $workspacectl move 10

## Layout:
bindcode $mod+42 splith
bindcode $mod+55 splitv

bindcode $mod+26 layout toggle split
bindcode $mod+25 layout tabbed
bindcode $mod+Shift+25 layout stacking

bindcode $mod+58 fullscreen

bindcode $mod+41 floating toggle

bindcode $mod+39 sticky toggle

bindcode 64+23 focus mode_toggle

bindcode $mod+38 focus parent

## Scratchpad:
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

## Utilities:
bindsym XF86AudioMute exec pactl set-sink-mute \@DEFAULT_SINK@ toggle
bindsym XF86AudioLowerVolume exec pactl set-sink-volume \@DEFAULT_SINK@ -5%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume \@DEFAULT_SINK@ +5%
bindsym XF86AudioMicMute exec pactl set-source-mute \@DEFAULT_SOURCE@ toggle

bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym XF86MonBrightnessUp exec brightnessctl set 5%+

bindsym Shift+Print exec $screenshot
bindsym Print exec $screenshot crop-to-clipboard

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

## Style:
default_border pixel 2
hide_edge_borders smart

set $background_1 #000000
set $background_2 #080808
set $background_3 #484848
set $foreground_1 #FFFFFF
set $foreground_2 #CFCFCF
set $foreground_3 #9F9F9F
set $accent       #4A8BE3

# Status Bar
bar {
    position top

    status_command while true; do $statusbar; sleep 1; done
    #status_command i3status

    colors {
        statusline         $foreground_1
        background         $background_1
        inactive_workspace $background_1 $background_1 $foreground_2
        active_workspace   $foreground_2 $foreground_2 $background_1
        focused_workspace  $foreground_1 $foreground_1 $background_1
        urgent_workspace   $accent $accent $foreground_1
    }
}

# class                 border        bground       text          indicator     child_border
client.focused          $foreground_3 $foreground_3 $background_1 $foreground_1 $foreground_3
client.focused_inactive $background_2 $background_2 $foreground_2 $background_2 $background_2
client.unfocused        $background_1 $background_1 $foreground_2 $accent       $background_2
client.urgent           $background_2 $background_2 $foreground_2 $accent       $background_2
client.placeholder      $foreground_2 $background_1 $background_1 $background_2 $foreground_2
