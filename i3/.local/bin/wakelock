#!/usr/bin/env bash
#
# Switch the always on (wakelock) mode on and off.
set -e

SWAY_SCRIPT_IDLE="$SWAY_SCRIPTS_DIR/idle.sh"
PID_FILE="$SWAY_RUNTIME_DIR/swayidle.pid"

[[ ! -f "$PID_FILE" ]] && exit 1

process_pid="$(cat $PID_FILE)"
if ps -p $process_pid > /dev/null; then
    kill "$process_pid"
else
    exec "$SWAY_SCRIPT_IDLE"
fi
